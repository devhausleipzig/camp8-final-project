//About this Schema:

// MasterItem:  contain all "prototype" Item. Are defined by id, name, img-url and a default category for this item.
// Category:   contain all Category. Are definied by id and Name
// UserItem:    contain all Item used by a User. Are definied by id, a user they belong to, List they found on, masterItemId and a custom Category (which is optional)
// List:        contain all List. Are defined by id, the user they belong to, and Item related to this list.
// User:         all User. Are defined by id, name, and List that are related to this specific user.

//Workflow: choose an Item to add to the List:
////pick listId, pick a masterItemId from MasterItem & add a record to Items
//Workflow: disply Item on a list: display all UserItem filtered by listId. Only listIds that the user has acceess to are displayd.

///Optional, bit important:
//in Front there are two options
//There is a msterItem, of no, custonName to be added to Items
//Alternative: moderationsworkflow: all new entries are added to masterItems but only approved one are shown to other users


generator client {
  provider = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId              String @id @default(uuid())

  userName            String
  userEmail           String @unique
  userLists            List[] //opposite relation one-to-many

  @@map("Users")
}

model List {
  listId              String @id @default(uuid())

  listName            String? @default("new list")

  userIdentifier      String //entering correct identifier will Link to user
  belongsTo           User @relation(fields: [userIdentifier], references: [userId])

  items               Item[] ///opposite relation to userItem related to this List.

  @@map("List")
}

model Item {
  itemId              String  @id @default(uuid())

  customItemName      String?

  quantity            Float?
  unit                String?

  //entering correct identifier will Link to a list
  listIdentifier      String?
  inList              List?   @relation(fields: [listIdentifier], references: [listId])

  //this userItem is based on
  masterItemId        String
  masterItem          MasterItem @relation(fields: [masterItemId], references: [masterItemId])

  customCategoryId    String?
  customCategory      Category? @relation(fields: [customCategoryId], references: [categoryId])

  @@map("Items")
}

model MasterItem {
  masterItemId        String @id @default(uuid())
  masterItemName      String @unique
  imageUrl            String?

  categoryName        String?
  defaultCategory     Category? @relation(fields: [categoryName], references: [categoryName])

  Item                Item[] //opposite Relation

  @@map("MasterItems")
}

model Category {
  categoryId          String  @id @default(uuid())
  categoryName        String  @unique
  MasterItem          MasterItem[] //opposite relation to defaultCategory in MasterItem
  userItem            Item[] //opposite relation to customCategory in userItem

  @@map("Categories")
}

