generator client {
  provider = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id    String @id @default(uuid())
  Name  String
  Email String
  List  List[]
}

model List {
  Id     String  @id @default(uuid())
  Name   String
  User   User?   @relation(fields: [UserId], references: [Id])
  UserId String?
  Items  Items[]
}

model Categories {
  Id    String  @id @default(uuid())
  Name  String  @unique
  Items Items[]
}

model Items {
  Id                 String      @id @default(uuid())
  Name               String
  In_List     List?       @relation(fields: [ListId], references: [Id])
  ListId             String?
  Has_Category Categories? @relation(fields: [CategoryId], references: [Id])
  CategoryId         String?
}
